{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "mocha",
      "sinon",
      "chai",
      "node"
    ],
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./src/"
  }
}